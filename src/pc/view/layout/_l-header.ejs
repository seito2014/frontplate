<!--start header-->
<header class="l-header l-header-mb">
    <div class="l-container u-clear">

        <div class="l-header-left">
            <%- include('./view/module/_logo', { tag: 'a', link: './', mf: '', alt: 'LIG inc.'}) %>
        </div>


        <div class="l-header-right">
            <nav class="nav">
                <div class="nav-inner l-grid">
                    <ul class="nav-list l-grid-inner">
                        <% for(var iNav=0; iNav< navArray.length; iNav++) { %>
                        <li class="nav-item l-grid-item">
                            <a class="nav-link<% if(iNav === 0){ %> nav-link-current<% } %>" href="<%= navArray[iNav].link %>">
                                <%= navArray[iNav].name %>
                            </a>
                        </li>
                        <% } %>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
</header>
<!--end header-->
